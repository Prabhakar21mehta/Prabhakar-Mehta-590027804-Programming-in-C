    if (month < 3) {
        month += 12;
        year -= 1;
    }
    
    d1 = 1; 
    m1 = 13; 
    y1 = year % 100; 
    k = year / 100; 
   
    day = (d1 + (13 * (m1 + 1)) / 5 + y1 + (y1 / 4) + (k / 4) - (2 * k)) % 7;
    
    
    switch (day) {
